extends layout

block content
    h2 Syn
    |#[strong Næste:] #{car.nextInspection.toLocaleDateString()}
    br
    |#[strong Sidste:] #{car.prevInspection.toLocaleDateString()}
    br
    br
    //- h2 Tilføj syn
    div.buttonDiv
        form(action="addInspection", method="POST")
            table
                tr
                    td #[strong Dato for næste: ]
                    td
                        input(type="date",
                        name="nextInspection",
                        value=new Date().toISOString().split('T')[0],
                        min=value=new Date().toISOString().split('T')[0])
            input(type="hidden", name="_id", value=car._id)
            button(type="submit") TILFØJ