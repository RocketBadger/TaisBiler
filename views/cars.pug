extends layout

block content
    h1 Biler
    table
        each car in cars
            tr
                td(colspan=3) 
                    if car.nickName != null
                        if car.nickName != ''
                            br
                            |#[strong Kælenavn:] #{car.nickName}
                    br
                    |#[u #{car.licensePlate}]
            tr                 
                td
                    a(href="/biler/redigerBil/" + car._id, class='emojiLink') ✏️
                td
                    a(href="/reparation/" + car._id, class='emojiLink') 🔧
                td
                    a(href="/skader/" + car._id, class='emojiLink') 💥