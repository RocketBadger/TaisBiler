extends layout

block content
    .grid-container
        .grid-item
            h1 Biler
            table
                each car in cars
                    tr
                        td(colspan=2)
                            if car.nickName
                                br
                                |#[b K√¶lenavn:] #{car.nickName}
                            br
                            |#[u #{car.licensePlate}]
                    tr
                        td.emojiTD
                            a(href="/biler/redigerBil/" + car._id, class='emojiLink') ‚úèÔ∏è
                        td.emojiTD
                            a(href="/reparation/" + car._id, class='emojiLink') üîß
        .grid-item
            h1 Syn og Planlagt Arbejde
            table.listTable
                each inspection in inspections
                    tr
                        td.listTD
                            br
                            | #[b Syn] 
                            if inspection.nickName 
                                br
                                |#[b K√¶lenavn:] #{inspection.nickName}
                            br
                            |#[u #{inspection.licensePlate}]
                            br
                            | #[b Dato:] #{inspection.nextInspection.toLocaleDateString()} 
                each repair in repairs
                    tr
                        td
                            if repair.nickName 
                                |#[b K√¶lenavn:] #{repair.nickName}
                            if repair.licensePlate
                                br
                                |#[u #{repair.licensePlate}]
                            if repair.repair
                                | #{repair.repair}
                            if repair.date
                                br
                                | #[b Dato:] #{repair.date.toLocaleDateString()} 
                
                                        
