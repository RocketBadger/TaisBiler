extends layout

block content
    include viewCar
        
    h1 Tilføj reparation
    form(action="addRepair", method="POST")
        table
            tr
                td Reparation:
                td
                    input(type="text", name="repair")
            tr
                td Dato:
                td
                    input(type="date", name="date")
            tr
                td Repareret:
                td
                    select(name="repaired")
                        option(value="false") Nej
                        option(value="true") Ja
        input(type="hidden", name="_id", value=car._id)
        button(type="submit") TILFØJ

    .grid-container
        .grid-item
            include viewRepairs
        .grid-item
            include viewDamages