extends layout

block content

    h2 Rediger reparation
    div.buttonDiv
        form(action="redigerReparation" method="POST")
            | #[b Nummerplade:] #{car.licensePlate}
            br
            | #[b Mærke:] #{car.brand}
            br
            | #[b Model:] #{car.model}
            br  
            br  

            table
                tr
                    td #[b Reparation:]
                    td
                        input(type="text" name="repair" value=repair.repair)
                tr
                    td #[b Dato:]
                    td
                        input(type="date" name="date" value=new Date(repair.date).toLocaleDateString())
                tr
                    td #[b Repareret:]
                    td
                        if repair.repaired
                            select(name="repaired")
                                option(value="true") Ja
                                option(value="false") Nej
                        else 
                            select(name="repaired")
                                option(value="false") Nej
                                option(value="true") Ja
            input(type="hidden" name="_id" value=repair._id)
            button(type="submit") REDIGÉR