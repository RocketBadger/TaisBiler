extends layout

block content
    include viewCar
    
    h1 Tilføj skade
    form(action="addDamage", method="POST")
        table
            tr
                td #[strong Skade:]
                td
                    input(type="text", name="damage" placeholder='Skade')
            tr
                td #[strong Dato:]
                td
                    input(type="date", name="date" value='2020-11-20')
            tr
                td #[strong Repareret:]
                td
                    select(name="repaired")
                        option(value="false") Nej
                        option(value="true") Ja
        input(type="hidden", name="_id", value=car._id)
        button(type="submit") TILFØJ

    .grid-container
        .grid-item
            include viewDamages
        .grid-item
            include viewRepairs