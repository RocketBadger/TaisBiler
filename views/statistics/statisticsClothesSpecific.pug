extends ../layout

block content
    include statistics
    h2 Tøj
    | Mærke: #{clothes.brand}
    br
    | Type: #{clothes.name}
    br
    | Str.: #{clothes.size}
    br
    h3 Modtagere
    table
        each dates, person in persons
            tr
                if person.split(",").length > 2
                    if person.split(",")[1].includes('name')
                        td #{person.split(",")[1].replace(/name:/gi, "").replace(/'/gi, "")}
                    else if person.split(",")[1].includes('position')
                        td #{person.split(",")[1].replace(/position:/gi, "").replace(/'/gi, "")}
                    else if person.split(",")[1].includes('birthday')
                        td #{person.split(",")[1].replace(/birthday:/gi, "").replace(/'/gi, "")}
                    else
                        td Ukendt person
                else
                    td Intet navn
                td #{dates.length}
                td
                    a(href="/statistik/personer/" + person.split(",")[0].split(": ")[1], class='emojiLink') 🔍
