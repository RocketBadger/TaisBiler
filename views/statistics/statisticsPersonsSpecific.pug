extends ../layout

block content
    include statistics
    h2 Person
    if person.name
        | Navn: #{person.name}
        br
    if person.position
        | Stilling: #{person.position}
        br
    if person.birthday
        | Fødselsdag: #{person.birthday.toLocaleDateString()}
    h3 Modtaget tøj
    table
        for piece in clothes
            tr
                td #{piece.brand} #{piece.name} str. #{piece.size}
                td
                    if piece.handedOut.length > 0
                        for date in piece.handedOut.get(person._id)
                            | #{date}
                            br
                td.emojiTD
                    a(href="/statistik/toj/" + piece._id, class='emojiLink') 🔍