extends layout

block content
    h1 Opret bil
    form(action="opretBil", method="POST")
        table
            tr
                td #[strong Mærke:]
                td
                    input(type="text", name="brand" placeholder='Mærke' required)
            tr
                td #[strong Model:]
                td
                    input(type="text", name="model" placeholder='Model' required)
            tr
                td #[strong Nummerplade:]
                td
                    input(type="text", name="licensePlate" placeholder='Nummerplade' required)
            tr
                td #[strong Farve:]
                td
                    input(type="text", name="colour" placeholder='Farve' required)
            tr
                td #[strong Motor:]
                td
                    input(type="text", name="engine" placeholder='Motor' required)
            tr
                td #[strong Årgang:]
                td
                    input(type="text", name="year" placeholder='Årgang' required)
            tr
                td #[strong ID:] (Skal være et tal)
                td
                    input(type="text", name="id" placeholder='ID' required)
            tr
                td #[strong Skrottet:]
                td
                    select(name="retired")
                        option(value="false", retired = false) Nej
                        option(value="true", retired = true) Ja
        button(type="submit") OPRET